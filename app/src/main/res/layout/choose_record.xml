<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/record_hc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ai_icon_huici"
            android:onClick="onClick"
            android:padding="20dp"
            android:text="回次"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            app:gTouchEffect="ease" />

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/record_yt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ai_icon_yantu"
            android:onClick="onClick"
            android:padding="20dp"
            android:text="岩土"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            app:gTouchEffect="ease" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/record_dt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ai_icon_dongtan"
            android:onClick="onClick"
            android:padding="20dp"
            android:text="动探"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            app:gTouchEffect="ease" />

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/record_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ai_icon_biaoguan"
            android:onClick="onClick"
            android:padding="20dp"
            android:text="标贯"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            app:gTouchEffect="ease" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/record_qt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ai_icon_qutu"
            android:onClick="onClick"
            android:padding="20dp"
            android:text="取土"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            app:gTouchEffect="ease" />

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/record_qs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ai_icon_add_qs"
            android:onClick="onClick"
            android:padding="20dp"
            android:text="取水"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            app:gTouchEffect="ease" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/record_sw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ai_icon_add_sw"
            android:onClick="onClick"
            android:padding="20dp"
            android:text="水位"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            app:gTouchEffect="ease" />

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/record_bz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ai_icon_add_bz"
            android:onClick="onClick"
            android:padding="20dp"
            android:text="备注"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            app:gTouchEffect="ease" />
    </LinearLayout>

</LinearLayout>