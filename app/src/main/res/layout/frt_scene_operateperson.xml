<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.cj.record.views.MaterialBetterSpinner
        android:id="@+id/operateperson_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="选择司钻员姓名"
        app:met_baseColor="@android:color/holo_red_light"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="司钻员" />

    <com.cj.record.views.MaterialEditTextNoEmoji
        android:id="@+id/operateperson_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入司钻员证件号"
        app:met_baseColor="@android:color/holo_red_light"
        app:met_clearButton="true"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="司钻员证件号" />
</LinearLayout>