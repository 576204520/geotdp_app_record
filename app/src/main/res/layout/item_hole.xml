<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hole_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/hole_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="12dp"
            android:background="@mipmap/ktd_icon" />

        <ImageView
            android:id="@+id/hole_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="0.4dp"
            android:background="@mipmap/upload_finish" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="14dp"
            android:layout_toLeftOf="@id/hole_right"
            android:layout_toRightOf="@id/hole_logo"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hole_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="项目项目名称"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/hole_code_relate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="项目编号"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hole_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="类型:钻孔"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/hole_depth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="深度:111.2321m"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/hole_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="已定位"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/hole_relate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="已关联"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/hole_createTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:lines="1"
                android:singleLine="true"
                android:text="开始时间:2018-12-11 12:45:45"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/hole_btn_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <net.qiujuer.genius.ui.widget.Button
                android:id="@+id/hole_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:drawableTop="@mipmap/ai_icon_detail"
                android:paddingTop="6dp"
                android:text="勘探点详情"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                app:gTouchEffect="ease" />

            <net.qiujuer.genius.ui.widget.Button
                android:id="@+id/hole_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:drawableTop="@mipmap/ai_icon_edit"
                android:paddingTop="6dp"
                android:text="编辑勘探点"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                app:gTouchEffect="ease" />

            <net.qiujuer.genius.ui.widget.Button
                android:id="@+id/hole_recordList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:drawableTop="@mipmap/ai_icon_ktxl"
                android:paddingTop="6dp"
                android:text="记录列表"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                app:gTouchEffect="ease" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_300"
            android:orientation="horizontal">

            <net.qiujuer.genius.ui.widget.Button
                android:id="@+id/hole_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:drawableTop="@mipmap/ai_icon_outline"
                android:padding="4dp"
                android:paddingTop="6dp"
                android:text="预览统计"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                app:gTouchEffect="ease" />

            <net.qiujuer.genius.ui.widget.Button
                android:id="@+id/hole_upload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:drawableTop="@mipmap/ai_icon_upload"
                android:padding="4dp"
                android:paddingTop="6dp"
                android:text="上传"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                app:gTouchEffect="ease" />

            <net.qiujuer.genius.ui.widget.Button
                android:id="@+id/hole_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:drawableTop="@mipmap/ai_icon_delete"
                android:padding="4dp"
                android:paddingTop="6dp"
                android:text="删除勘探点"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                app:gTouchEffect="ease" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>