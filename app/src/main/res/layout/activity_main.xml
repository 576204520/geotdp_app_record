<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <com.cj.record.views.MViewPager
        android:id="@+id/main_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="47dp"
        android:scrollbars="none"></com.cj.record.views.MViewPager>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/main_tabLayout"
        android:background="@color/colorTexthintGrey" />

    <com.jpeng.jptabbar.JPTabBar
        android:id="@+id/main_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorWhite"
        android:paddingTop="2dp"
        app:BadgeColor="@color/colorPrimaryDark"
        app:BadgeHorizonalMargin="16dp"
        app:BadgePadding="4dp"
        app:BadgeVerticalMargin="6dp"
        app:TabAnimate="None"
        app:TabIconSize="20dp"
        app:TabMargin="4dp"
        app:TabNormalColor="@color/colorTexthintGrey"
        app:TabSelectColor="@color/colorPrimaryDark"
        app:TabTextSize="12sp" />
</RelativeLayout>

