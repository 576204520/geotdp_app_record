<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <!--RecyclerView需要设置分割线，这里图省事了-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/colorTexthintGrey" />

    <RelativeLayout
        android:id="@+id/template_item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/template_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginRight="45dp"
            android:layout_toRightOf="@id/relate_hole_check"
            android:text="模板名称"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/template_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/template_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="45dp"
            android:text="岩土-充填土"
            android:textSize="16sp" />


        <CheckBox
            android:id="@+id/template_check"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:button="@drawable/cb_relate" />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/template_detail_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/template_item_rl"
        android:layout_margin="5dp"
        android:visibility="gone" />

</RelativeLayout>