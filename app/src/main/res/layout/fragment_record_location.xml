<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical">


    <com.cj.record.views.MaterialEditTextNoEmoji
        android:id="@+id/edtLatitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="false"
        android:hint="未定位"
        android:visibility="gone"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="基准纬度"
        app:met_iconLeft="@mipmap/ai_icon_jzlatitude" />

    <com.cj.record.views.MaterialEditTextNoEmoji
        android:id="@+id/edtLongitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="false"
        android:hint="未定位"
        android:visibility="gone"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="基准经度"
        app:met_iconLeft="@mipmap/ai_icon_jzlongitude" />


    <com.cj.record.views.MaterialEditTextNoEmoji
        android:id="@+id/edtLocationTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:editable="false"
        android:hint="未定位"
        android:textColor="@color/colorBlack"
        android:visibility="gone"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="基准时间"
        app:met_iconLeft="@mipmap/ai_icon_jztime" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/edtAccuracy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="偏移距离"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/edtAccuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/edtAccuracy_tv"
                android:background="@null"
                android:enabled="false"
                android:hint="正在获取..."
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/edtTime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="已工作时间"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/edtTime_tv"
                android:background="@null"
                android:enabled="false"
                android:hint="正在获取..."
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>